<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

       <include layout="@layout/title_commom_layout"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="50dp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginLeft="30dp"
               android:layout_marginRight="30dp"
               android:layout_marginTop="7dp"
               android:layout_marginBottom="7dp"
               android:background="@drawable/round_left_right_bg"
               android:orientation="horizontal"
               android:layout_weight="1">


               <TextView
                   android:id="@+id/tv_left"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:textColor="@color/select_white_theme"
                   android:textSize="13sp"
                   android:background="@drawable/round_left_select"
                   android:gravity="center"
                   android:text="支部活动"/>
               <View
                   android:layout_width="0.5dp"
                   android:layout_height="match_parent"
                   android:background="@color/colorPrimary"/>

               <TextView
                   android:id="@+id/tv_right"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:textColor="@color/select_white_theme"
                   android:textSize="13sp"
                   android:background="@drawable/round_right_select"
                   android:gravity="center"
                   android:text="三会一课"/>

           </LinearLayout>
       </LinearLayout>


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="5dp"
           android:gravity="center">

           <ImageView
               android:layout_width="12dp"
               android:layout_height="12dp"
               android:src="@mipmap/icon_emblem_red"/>

           <TextView
               android:id="@+id/tv_bumen"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/c_333333"
               android:textSize="12sp"
               android:layout_marginLeft="5dp"
               android:text="延安党委1党总支第一党支部-支撑"/>


       </LinearLayout>

       <FrameLayout
           android:id="@+id/content_frame"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_marginTop="10dp"
           android:layout_weight="1"
           />




   </LinearLayout>







</LinearLayout>
