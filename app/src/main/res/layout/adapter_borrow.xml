<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_white"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="7dp"
            android:paddingTop="7dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="贷款王"
                    android:textSize="15sp"
                    android:textColor="@color/c_222222"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_0_grey"
                    android:textSize="10sp"
                    android:textColor="#9c9fb8"
                    android:padding="2dp"
                    android:layout_marginLeft="5dp"
                    android:text="无抵押"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_0_grey"
                    android:textSize="10sp"
                    android:textColor="#9c9fb8"
                    android:padding="2dp"
                    android:layout_marginLeft="5dp"
                    android:text="1小时放款"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_solg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="填写手机号，人人都能借到钱"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/c_999999"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50万"
                            android:textColor="@color/red"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:textSize="25sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="元"
                            android:textColor="@color/red"
                            android:textSize="10sp"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="2dp"
                            android:layout_toRightOf="@+id/tv_money"
                            android:layout_toEndOf="@+id/tv_money" />
                    </RelativeLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="最高额度"
                        android:textSize="12sp"
                        android:textColor="@color/c_999999"
                        />


                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="20dp"
                    android:background="@color/line"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_lixi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.1"
                            android:textColor="@color/c_222222"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:textSize="25sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="%"
                            android:textColor="@color/c_222222"
                            android:textSize="10sp"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="2dp"
                            android:layout_toRightOf="@+id/tv_lixi"
                            android:layout_toEndOf="@+id/tv_lixi" />
                    </RelativeLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="参考月息"
                        android:textSize="12sp"
                        android:textColor="@color/c_999999"
                        />


                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="20dp"
                    android:background="@color/line"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12-48"
                            android:textColor="@color/c_222222"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:textSize="25sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="月"
                            android:textColor="@color/c_222222"
                            android:textSize="10sp"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="2dp"
                            android:layout_toRightOf="@+id/tv_time"
                            android:layout_toEndOf="@+id/tv_time" />
                    </RelativeLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="期限范围"
                        android:textSize="12sp"
                        android:textColor="@color/c_999999"
                        />


                </LinearLayout>



            </LinearLayout>
            <TextView
                android:id="@+id/tv_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="成功贷款人数34,456人"
                android:textSize="12sp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/c_222222"/>



        </LinearLayout>

        
        <ImageView
            android:id="@+id/iv_sing"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/label_featured"
            android:layout_gravity="right"/>
        

    </FrameLayout>



</LinearLayout>
